<h2>Change your password</h2>

<div class="col-md-2 col-md-offset-5">

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div>
      <%= f.password_field :password, class: 'form-control', placeholder: 'password', :autofocus => true %></div>

      <div>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'password confirmation' %></div>

      <br>
      <div><%= f.submit "Change password", class: 'btn btn-info' %></div>
    <% end %>
      <br>
    <%= render "devise/shared/links" %>

</div>
