<div class="form-container clearfix">
  <form role="form">
  <% if current_user %>
  </br>
  </br>
    <%= form_for @user do |f| %>
      <div class="form-group clearfix ">      
        <div class=" col-sm-8 col-md-9 col-lg-10 input-container">
          <label for="email" class="control-label">e</label>
          <%= f.text_field :email, class: 'form-control', placeholder: 'email' %>
        </div>
      
        <div class=" col-sm-8 col-md-9  col-lg-10 input-container">
          <label for="email" class="control-label">p</label>
          <%= f.text_field :phone_number, class: 'form-control', placeholder: 'phone number' %>
        </div>
      </div>
       
        <div class=" col-sm-8 col-md-9  col-lg-10 input-container">
          <%= f.submit 'Update', class: 'btn btn-info' %>
        </div>

    <% end %>

  <% else %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group clearfix ">
        <div class="col-sm-8 col-md-9 col-lg-10 input-container">
          <label for="email" class="control-label">e</label>
          <%= f.email_field :email, class: 'form-control', placeholder: 'email', :autofocus => true %>
        </div>

        <div class="col-sm-8 col-md-9 col-lg-10 input-container">
          <label for="password" class="control-label">p</label>
          <%= f.password_field :password, class: 'form-control', placeholder: 'password'  %>
        </div>

        <div class="col-sm-8 col-md-9 col-lg-10 input-container">
          <label for="password" class="control-label">p</label>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'password confirmation' %>
        </div>
      </div>
          
        <div class="col-sm-8 col-md-9 col-lg-10 input-container">
          <%= f.submit "Sign up", class: 'btn btn-info' %>
        </div>
      <% end %>

  <% end %>
</form>
</div>