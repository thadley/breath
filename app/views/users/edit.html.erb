<div class="form-group" style="width: 20%">
  <% if current_user %>
     Hello <%= link_to (current_user.email), edit_user_registration_path %>
 </br>
     <%= mail_to('hello@onebreath.io', 'Contact us') %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <br></br>


    <p>
   
        <% if @user.errors.any? %>
           <div class="alert alert">
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
           </div>
        <% end %>

    <%= form_for @user do |f| %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %> 
            <p class="emailCheckbox">
            <%= f.check_box :send_email %> <%= f.label :send_email %></p>
            <%= f.text_field :phone_number, class: 'form-control', placeholder: 'Phone number' %>
            <%= f.select :carrier, options_for_select(%w[AT&T Verizon Sprint T-Mobile USCellular], f.object.carrier), {}, {class: "form-control"} %>
            <p class="smsCheckbox"> 
            <%= f.check_box :send_sms %> <%= f.label :send_SMS %> <p/>
            <%= f.submit 'Save', class: 'btn btn-info' %>
    <% end %></p>

 <% else %>
    <%= link_to "Sign up", new_user_registration_path %>
    or
    <%= link_to "Sign in", new_user_session_path %>

 <% end %>

</div>
